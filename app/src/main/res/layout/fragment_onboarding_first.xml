<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.onboarding.screen.OnboardingFirstFragment">

        <ImageView
            android:id="@+id/ivOnboarding1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/onboarding_1"
            app:layout_constraintBottom_toTopOf="@+id/tvOnboarding1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvOnboarding1"
            style="?titleStyle"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginBottom="200dp"
            android:text="@string/text_onboarding1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- TODO: SUBIR IMAGEM E COLOCAR UM TEXTO DE NO MÃXIMO 3 LINHAS -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>